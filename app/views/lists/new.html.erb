<div class="container">
  <h2>Automate Task</h2>
  <p>AutoBot Runs Every Day between 0500-0900, and 1200-1600.</p>
  <p>Singapore Time (SGT). Offset UTC +8:00 hours</p>
  <%= form_tag @list do %>

    <div class="row">
      <div class="form-inline">
        <div class="col-sm-4 col-lg-4">
          <div class="form-group">
            <label for="Name">Name:</label>
            <%= text_field_tag :name, "",class: "form-control", placeholder: "Name", id: "name", name:"list[name]"%>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label for="pin code">Pin Code:</label>
            <%= number_field_tag :country_code, nil, min: 4, class: "form-control", placeholder: "Enter Pin Code", id: "pin_code", name:"list[pin_code]"%>
          </div>
        </div>
        <div class="col-sm-4" style="margin-top: auto;">
          <div class="form-group">
            <%= select_tag(:time_mode, options_for_select([ ['AM', "AM"], ['PM', "PM"]] ), {:class => 'form-control'})  %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <br>
    <div style="text-align:center">
      <%= submit_tag("Add Profile", :class=>"btn btn-default", :style => "background-color: #007bff;" ) %>
    </div>
  <% end %>
  <%= success %>
  <%= link_to "Add new Profile", new_list_path%>
</div>